@model Recuperacion_Contrasenia.ViewModels.RecuperarPasswordViewModel
@{
    ViewBag.Title = "Recuperar";
}

<h2>Recuperar</h2>

<form action=@Url.Content("~/Acceso/Recuperar") method="post">
    @Html.HiddenFor(m => m.Token)
    <div class="row">
        <div class="form-group">
            <label> Escribe tu nueva contraseña</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label> Vuelve a escribir la contraseña</label>
            @Html.PasswordFor(m => m.Password2, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password2, "", new { @class = "text-danger" })
        </div>
        <input type="submit" value="Cambiar" class="btn btn-default" />
    </div>
</form>