@model Recuperacion_Contrasenia.Entidades.Usuario
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div style="color:Red">
    @ViewBag.Mensaje
</div>
<div style="color:Green">
    @ViewBag.Error
</div>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email,new {placeholder="ir Directo a recuperar", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { placeholder="Ir directo a recuperar",@class = "form-control" })
    </div>
    <input type="submit" value="Ingresar" class="btn btn-primary" />

}
<br/>
<br/>

@Html.ActionLink("Olvidaste tu contraseña?", "EmpezarRecuperacion")